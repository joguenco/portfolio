---
import Section from '@/components/Section.astro'

import { projects } from '@cv'
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ url, description, highlights, name }) => {
        return (
          <li>
            <article>
              <header>
                <a href={url} target="_blank" rel="noopener noreferrer">
                  <h3>{name}</h3>
                </a>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
